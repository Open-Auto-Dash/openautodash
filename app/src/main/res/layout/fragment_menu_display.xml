<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuDisplay">

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_menu_controls_night_mode"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:stepSize="5.0"
        android:valueFrom="0.0"
        android:valueTo="50.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/colorSemiBold"
        app:tickColor="@color/colorSemiBold"
        app:trackColor="@color/colorSemiLight" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_menu_controls_display_point"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:stepSize="1.0"
        android:valueFrom="0.0"
        android:valueTo="5.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:thumbColor="@color/colorSemiBold"
        app:tickColor="@color/colorSemiBold"
        app:trackColor="@color/colorSemiLight" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_menu_controls_display_brightness"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:stepSize="25.0"
        android:valueFrom="0.0"
        android:valueTo="300.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:thumbColor="@color/colorSemiBold"
        app:tickColor="@color/colorSemiBold"
        app:trackColor="@color/colorSemiLight" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Brightness Level"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/slider_menu_controls_display_point"
        app:layout_constraintTop_toBottomOf="@+id/slider_menu_controls_night_mode" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Brightness"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/slider_menu_controls_display_brightness"
        app:layout_constraintTop_toBottomOf="@+id/slider_menu_controls_display_point" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Night Mode"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/slider_menu_controls_night_mode"
        app:layout_constraintStart_toStartOf="@+id/slider_menu_controls_night_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>