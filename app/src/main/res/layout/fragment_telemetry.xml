<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TelemetryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_f_home_speedlimit_view"
            android:layout_width="0dp"
            android:layout_height="79dp"
            android:background="@drawable/view_rounded_dark"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tele_speed_limit"
            app:layout_constraintEnd_toEndOf="@+id/tv_tele_speed_limit"
            app:layout_constraintStart_toStartOf="@+id/tv_tele_speed_limit"
            app:layout_constraintTop_toTopOf="@+id/tv_tele_speed_limit" />

        <TextView
            android:id="@+id/tv_tele_speed_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="24dp"
            android:elevation="6dp"
            android:padding="5dp"
            android:text="80"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="R"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="N"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="D"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="L"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView3" />


        <TextView
            android:id="@+id/tv_m_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="90sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_m_speed" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Km/h"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/tv_m_speed" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:text="P"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="65dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:padding="7dp"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_lte_signal"
            app:layout_constraintStart_toEndOf="@+id/iv_main_lte_signal"
            app:layout_constraintTop_toTopOf="@+id/iv_main_lte_signal" />

        <TextView
            android:id="@+id/tv_max_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_lte_signal"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_lte_signal"
            app:layout_constraintStart_toStartOf="@+id/iv_main_lte_signal"
            app:layout_constraintTop_toTopOf="@+id/iv_main_lte_signal" />

        <ImageView
            android:id="@+id/iv_main_lte_signal"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:elevation="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:srcCompat="@drawable/ic_targ_speed" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:text="     -"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textDirection="rtl"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_lte_signal"
            app:layout_constraintEnd_toStartOf="@+id/iv_main_lte_signal"
            app:layout_constraintTop_toTopOf="@+id/iv_main_lte_signal" />

        <TextView
            android:id="@+id/tv_m_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="@+id/divider" />

        <TextView
            android:id="@+id/tv_m_nice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="😏 Nice !"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_m_speed"
            app:layout_constraintStart_toEndOf="@+id/tv_m_speed" />

        <ImageView
            android:id="@+id/iv_home_album_art"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_song_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_lte_signal"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_home_play"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_play"
            android:tooltipText="Play/Pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_home_next_track"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_home_previous_track"
            app:layout_constraintTop_toBottomOf="@+id/pb_home_song_progress" />

        <ImageView
            android:id="@+id/iv_home_next_track"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_skip_next"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_home_play"
            app:layout_constraintTop_toTopOf="@+id/iv_home_play" />

        <ImageView
            android:id="@+id/iv_home_previous_track"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_skip_previous"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home_play"
            app:layout_constraintEnd_toStartOf="@+id/iv_home_play"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_home_play" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/pb_home_song_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="340"
            android:progressTint="@color/cat_medium_green"
            android:splitTrack="false"
            app:layout_constraintBottom_toTopOf="@+id/iv_home_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_song_artist" />

        <ImageView
            android:id="@+id/iv_home_like_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_favorite"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home_song_artist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home_song_title" />

        <TextView
            android:id="@+id/tv_home_song_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorTextBody"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_song_artist"
            app:layout_constraintEnd_toStartOf="@+id/iv_home_like_track"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_home_album_art" />

        <TextView
            android:id="@+id/tv_home_song_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorTextSubTitle"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/pb_home_song_progress"
            app:layout_constraintEnd_toStartOf="@+id/iv_home_like_track"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_song_title" />

        <Button
            android:id="@+id/b_home_connect_spotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:text="Connect Spotify"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/cat_medium_green"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home_album_art"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_home_album_art" />

        <ImageView
            android:id="@+id/iv_home_shuffle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@drawable/btn_shuffle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home_previous_track"
            app:layout_constraintEnd_toStartOf="@+id/iv_home_previous_track"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_home_previous_track" />

        <ImageView
            android:id="@+id/iv_home_repeat"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@drawable/btn_repeat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home_next_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_home_next_track"
            app:layout_constraintTop_toTopOf="@+id/iv_home_next_track" />

        <TextView
            android:id="@+id/tv_main_track_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="1:30"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_home_song_progress" />

        <TextView
            android:id="@+id/tv_main_track_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="3:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_home_song_progress" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>