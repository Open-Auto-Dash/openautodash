<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background fill -->
    <solid android:color="@color/colorBackgroundLight" /> <!-- #ffffff -->

    <!-- Light outline -->
    <stroke
        android:width="1dp"
        android:color="@color/colorBackgroundDefault" /> <!-- #D4DBE6 -->

    <!-- Rounded corners for smooth appearance -->
    <corners android:radius="8dp" />

    <!-- Padding to prevent text from touching outline -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>